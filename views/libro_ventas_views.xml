<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FORMULARIO VENTAS -->
        <record id="view_libro_ventas_periodo_form" model="ir.ui.view">
            <field name="name">libro.ventas.periodo.form</field>
            <field name="model">libro.ventas.periodo</field>
            <field name="arch" type="xml">

                <form string="Declaración de IVA Ventas" edit="true" create="false">

                    <header>
                        <button name="action_print_report" string="Imprimir PDF" type="object" class="btn-secondary"/>

                        <button name="action_mark_done" string="Validar" type="object" invisible="state != 'draft'" class="btn-success"/>

                        <button name="action_rectify" string="Rectificar" type="object" class="btn-warning" invisible="state != 'validated'"/>

                        <button name="action_load_invoices" string="Generar Detalle" type="object" class="btn-primary" invisible="state != 'draft'"/>

                        <button name="action_generate_excel" string="Generar Excel" type="object" class="btn-secondary"/>

                        <button name="action_generate_csv" string="Generar CSV" type="object" class="btn-secondary"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,validated"/>
                    </header>

                    <sheet>
                        <!-- TÍTULO DINÁMICO -->
                        <div class="oe_title">
                            <h1>
                                <field name="tipo_libro" readonly="1" class="oe_inline" options="{'consumidor': 'Consumidor Final', 'credito': 'Crédito Fiscal'}"/>
 - 
                                <field name="year_display" class="oe_inline"/>
 - 
                                <field name="periodo" readonly="1" class="oe_inline"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="assistant_id"/>
                                <field name="contador_name"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="tipo_libro" invisible="1"/>
                                <field name="incluir_sucursales"/>
                                <field name="date" readonly="1"/>
                                <field name="month"/>
                                <field name="year" invisible="1"/>
                            </group>
                        </group>

                        <group>
                            <field name="comentarios" placeholder="Ingrese comentarios adicionales..."/>
                        </group>

                        <notebook>

                            <!-- DETALLE VENTAS -->
                            <page string="Detalle Ventas">
                                <div class="mb-2">
                                    <button name="action_select_all" string="Seleccionar Todo" type="object" class="btn btn-secondary btn-sm me-2"/>
                                    <button name="action_unselect_all" string="Deseleccionar Todo" type="object" class="btn btn-secondary btn-sm"/>
                                </div>
                                <field name="invoice_line_ids" readonly="state == 'validated'">
                                    <list string="Facturas" create="false">
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="select"/>
                                        <field name="sequence" widget="handle"/>
                                        <field name="invoice_date"/>
                                        <field name="numero_documento"/>
                                        <field name="numero_control"/>
                                        <field name="codigo_generacion"/>
                                        <field name="sello_recepcion"/>
                                        <field name="partner_id"/>
                                        <field name="ventas_exentas" sum="Total Exento"/>
                                        <field name="ventas_gravadas" sum="Total Gravado"/>
                                        <field name="debito_fiscal" sum="Total Débito"/>
                                        <field name="amount_total" sum="Total"/>
                                    </list>
                                </field>
                            </page>

                            <!-- DETALLE ANULADAS -->
                            <page string="Detalle Anuladas">
                                <field name="invoice_line_ids_cancelled" readonly="1">
                                    <list string="Facturas Anuladas" create="false" delete="false" edit="false">
                                        <field name="currency_id" column_invisible="1"/>
                                        <field name="sequence"/>
                                        <field name="invoice_date"/>
                                        <field name="numero_documento"/>
                                        <field name="numero_control"/>
                                        <field name="codigo_generacion"/>
                                        <field name="sello_recepcion"/>
                                        <field name="partner_id"/>
                                        <field name="ventas_exentas" sum="Total Exento"/>
                                        <field name="ventas_gravadas" sum="Total Gravado"/>
                                        <field name="debito_fiscal" sum="Total Débito"/>
                                        <field name="amount_total" sum="Total"/>
                                        <field name="move_id" invisible="1"/>
                                    </list>
                                </field>
                            </page>

                            <!-- RESUMEN VENTAS -->
                            <page string="Resumen Ventas">
                                <group>
                                    <field name="total_ventas_exentas"/>
                                    <field name="total_ventas_gravadas"/>
                                    <field name="total_debito_fiscal"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- FORMULARIO LÍNEA DE VENTAS (POPUP) -->
        <record id="view_libro_ventas_line_form" model="ir.ui.view">
            <field name="name">libro.ventas.line.form</field>
            <field name="model">libro.ventas.line</field>
            <field name="arch" type="xml">
                <form string="Detalle de Factura">
                    <sheet>
                        <group>
                            <group>
                                <field name="periodo_id" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="sequence" readonly="1"/>
                                <field name="numero_documento" readonly="1"/>
                            </group>
                        </group>

                        <group string="Información DTE">
                            <field name="invoice_date" readonly="1"/>
                            <field name="codigo_generacion" readonly="1"/>
                            <field name="numero_control" readonly="1"/>
                            <field name="sello_recepcion" readonly="1"/>
                            <field name="tipo_documento_nombre" readonly="1"/>
                        </group>

                        <group string="Montos">
                            <group>
                                <field name="ventas_exentas" readonly="1"/>
                                <field name="ventas_gravadas" readonly="1"/>
                            </group>
                            <group>
                                <field name="debito_fiscal" readonly="1"/>
                                <field name="amount_total" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- LISTA DE PERIODOS VENTAS -->
        <record id="view_libro_ventas_periodo_list" model="ir.ui.view">
            <field name="name">libro.ventas.periodo.list</field>
            <field name="model">libro.ventas.periodo</field>
            <field name="arch" type="xml">
                <list string="Libros IVA Ventas">
                    <field name="assistant_id"/>
                    <field name="contador_name"/>
                    <field name="company_id"/>
                    <field name="date"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="periodo"/>
                    <field name="tipo_libro"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

    </data>
</odoo>
